function CalculateBOM($parent)
{
	echo '<b>Batchsize:'.$_POST['salesbatch'].'<br><b>Yield rate:'.$_POST['yieldpercent'];
	$sql4="update bom set salesreq='".$_POST['salesbatch']."',yield='".$_POST['yieldpercent']."' where parent='".$parent."'";

				

		$ErrMsg = _('Could not retrieve the BOM components because');
		$DbgMsg = _('The SQL used to retrieve the components was');
		
        $result4=DB_query($sql4,$ErrMsg,$DbgMsg);
$sqlsum="select  bom.component,bom.packsize ,bom.batch,bom.poductionbatch,(select @rt:=0) as totals,bom.salesreq,stockmaster.materialcost,bom.quantity,@rt:=@rt+(bom.quantity*bom.salesreq*stockmaster.materialcost)  totals from bom inner join stockmaster on bom.component=stockmaster.stockid where bom.parent='".$parent."'";

		$ErrMsg = _('Could not retrieve the BOM components because');
		$DbgMsg = _('The SQL used to retrieve the components was');
		$resultsum = DB_query($sqlsum,$ErrMsg,$DbgMsg);
		$totals=0;
		$packs=0;
		$batch=0;
		$prodbatch=0;
        while($myrow = DB_fetch_array($resultsum)){
				//echo $myrow['totals'].$myrow['parent'];		
				$totals+=$myrow['totals'];
				$packs=$myrow['packsize'];
				$batch=$myrow['batch'];
				$prodbatch=$myrow['poductionbatch'];
				//echo $totals.'<br>';
				//$s($myow['quantity']*$myrow['materialcost']);
			} //end while loop

$salesreq=1;
		echo '<form method="post" action="' . htmlspecialchars($_SERVER['PHP_SELF'],ENT_QUOTES,'UTF-8') . '?Select=' . $SelectedParent .'">';
		echo '<input type="hidden" name="FormIDS" value="' . $_SESSION['FormIDS'] . '" />';
		$production=($prodbatch/$prodbatch)*100;
		echo '</div><table class="selection"><tr>
        <td><br>Production B.S:<input type="text" name="actproduction" value="'.$prodbatch*$_POST['salesbatch'].'" id="productionbs" disabled></td>

		<td>Sales BS:<input type="text" name="salesbs" value="'.$batch*$_POST['salesbatch'].'" id="salesbs" disabled></td>
		<td>Std Sales Batch Size:<input type="text" name="batchsize" value="'.$batch.'" id="batchsize" disabled></td>
		<td>Std Production Batch Size:<input type="text" name="productbatch" value="'.$prodbatch.'" id="productbatch" disabled></td>
		<td>Pack size:<input type="text" name="packsize" value="'.$packs.'"  disabled></td><br><br>
		<td></td></tr>;
		<tr><td>Yield:<input type="text" name="yieldvalue" value="'.number_format((($_POST['yieldpercent']/100)*$prodbatch*$_POST['salesbatch']),2).'" id="yield" disabled ></td><td>Totals:<input type="text" name="tcosts" value="'.$totals.'"  id="tcost" disabled></td><td>Unit Cost(Kshs):<input type="text" value="'.number_format(($totals/($batch*$_POST['salesbatch']*($_POST['yieldpercent'])/100)),2).'" id="unitcost" disabled></td></tr></table>';

		
		echo '</form>';
		
}
